{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/database/002_seed_rbac_data.test.ts", "test/AuthenticationService.test.ts", "test/services/PermissionService.test.ts", "test/middleware/authMiddleware.test.ts", "test/integrations/ssh-PackageManagerDetector.test.ts", "test/integrations/ssh-config.unit.test.ts", "test/integrations/ssh-config.property.test.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
